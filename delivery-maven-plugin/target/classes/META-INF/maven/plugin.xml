<?xml version="1.0" encoding="UTF-8"?>
<plugin>
  <name>Delivery Maven plugin</name>
  <description></description>
  <groupId>com.acme</groupId>
  <artifactId>delivery-maven-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>
  <goalPrefix>delivery</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>check-deploy-needed</goal>
      <description>Checks if a module should be deployed.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.acme.plugins.delivery.CheckDeployNeededMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
      <parameters>
        <parameter>
          <name>deliveryVersion</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description>If this parameter is specified, only the modules with the same version
will be deployed.</description>
        </parameter>
        <parameter>
          <name>deploySnapshotsOnly</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>If this parameter is specified, only the modules with a snapshot version
will be deployed.</description>
        </parameter>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description></description>
        </parameter>
        <parameter>
          <name>skipDeploy</name>
          <type>boolean</type>
          <required>false</required>
          <editable>true</editable>
          <description>Used to check if the deploy plugin&apos;s global skip option is active.</description>
        </parameter>
      </parameters>
      <configuration>
        <deliveryVersion implementation="java.lang.String">${maven.delivery.version}</deliveryVersion>
        <deploySnapshotsOnly implementation="boolean">${maven.delivery.deploySnapshotsOnly}</deploySnapshotsOnly>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
        <skipDeploy implementation="boolean">${maven.deploy.skip}</skipDeploy>
      </configuration>
    </mojo>
    <mojo>
      <goal>check-version-consistency</goal>
      <description>Checks version consistency between the dependencies of a project.

For instance, if the current project has a dependency on A:1 (project A in
version 1) and B:2, and B has a dependency on A, the goal is to check that
the dependency in B:2&apos;s pom is on A:1, and not another version.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.acme.plugins.delivery.CheckConsistencyMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <threadSafe>false</threadSafe>
      <parameters>
        <parameter>
          <name>localRepository</name>
          <type>org.apache.maven.artifact.repository.ArtifactRepository</type>
          <required>false</required>
          <editable>true</editable>
          <description></description>
        </parameter>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description></description>
        </parameter>
        <parameter>
          <name>remoteRepositories</name>
          <type>java.util.List</type>
          <required>false</required>
          <editable>true</editable>
          <description></description>
        </parameter>
      </parameters>
      <configuration>
        <localRepository implementation="org.apache.maven.artifact.repository.ArtifactRepository">${localRepository}</localRepository>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
        <remoteRepositories implementation="java.util.List">${project.remoteArtifactRepositories}</remoteRepositories>
      </configuration>
      <requirements>
        <requirement>
          <role>org.apache.maven.artifact.factory.ArtifactFactory</role>
          <field-name>artifactFactory</field-name>
        </requirement>
        <requirement>
          <role>org.apache.maven.project.MavenProjectBuilder</role>
          <field-name>mavenProjectBuilder</field-name>
        </requirement>
      </requirements>
    </mojo>
  </mojos>
